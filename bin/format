#!/bin/sh
# Keep this script POSIX-compliant (no bash/zsh-specific extensions); check with ShellCheck.
set -eu

ROOT_DIR=$(cd "$(dirname "$0")/.." && pwd)
cd "$ROOT_DIR"

if [ "$#" -gt 0 ]; then
  exec swift package plugin --allow-writing-to-package-directory swiftformat -- "$@"
fi

exec swift package plugin --allow-writing-to-package-directory swiftformat
